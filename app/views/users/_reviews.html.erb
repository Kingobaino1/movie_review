<div class="col-md-8 reviews follow color">
  REVIEWS
<div class="row">
  <aside class="col-md-12">
    <section class="opinions_form">
     <%= render 'shared/review_form' %>
    </section>
  </aside>
  <aside class="col-md-12">
    <section class="reviews">
      <%= @opinions.count %> New Reviews
      <div class="card">
        <ol class="list-group list-group-flush p">
          <% @opinions.each do |opinion| %>
          <li class="list-group-item d">
          <div class="d f_dir_col">
            <div class="name">
            <%= opinion.title%>
            </div>
            <div>
            <% if opinion.image.attached? %>
             <%= image_tag opinion.image, class: 'image' %>
            <% end %>
            </div>
            <div class="name">
              Genre:<%= opinion.genre %>
            </div>
          </div>
          <div class="d f_dir_col review_content p">
          <div class="name">
           <% if opinion.user != nil%>
            Reviewed by: <%= opinion.user.full_name %>
            <% end %>
          </div>
          <div class="name">
            Rating:
            <% opinion.rating.to_i.times do  %>
            <span class="glyphicon glyphicon-star color_gold"></span>
            <% end %>
            <% opinion.blank_stars.times do %>
            <span class="glyphicon glyphicon-star-empty"></span>
            <% end %>
          </div>
          <div class="name">
          Review:
          </div>
          <div>
            <%= opinion.content %>
          </div>
          <div class="name">
            Posted <%= time_ago_in_words(opinion.created_at) %> ago.
          </div>
          </div>
          </li>
          <% end %>
        </ol>
      </div>
    </section>
  </aside>
</div>

</div>